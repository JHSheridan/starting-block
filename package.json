{
  "name": "starting-block",
  "description": "Modern WordPress starter theme featuring CSS Grid, Sass, and CLI-based build system.",
  "version": "1.0.0",
  "author": "John H. Sheridan <john@jhsheridan.com>",
  "license": "MIT",
  "devDependencies": {
    "sass": "^1.69.5",
    "postcss-cli": "^11.0.0",
    "autoprefixer": "^10.4.16",
    "browser-sync": "^3.0.4",
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "start": "concurrently \"npm run watch:sass\" \"npm run serve\"",
    "build": "npm run build:sass && npm run build:prefix",
    "watch:sass": "sass --watch assets/sass/style.scss:style.css --style=expanded --source-map",
    "build:sass": "sass assets/sass/style.scss:style.css --style=expanded --source-map",
    "build:prefix": "postcss style.css --use autoprefixer --replace --map",
    "serve": "browser-sync start --proxy='https://sb.wp' --files='style.css,**/*.php' --ignore='node_modules' --https --no-verify-ssl"
  }
}
